generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String       @id
  name        String
  price       String
  href        String
  description String
  details     String
  highlights  Json
  breadcrumbs Breadcrumb[]
  variants    Variant[]
}

model Breadcrumb {
  id        Int     @id @default(autoincrement())
  name      String
  href      String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model Variant {
  id        Int     @id @default(autoincrement())
  name      String?
  productId String
  product   Product @relation(fields: [productId], references: [id])
  images    Image[]
}

model Image {
  id        Int     @id @default(autoincrement())
  src       String
  alt       String
  variantId Int
  variant   Variant @relation(fields: [variantId], references: [id])
}
